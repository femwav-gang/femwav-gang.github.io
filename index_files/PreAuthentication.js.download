function firstSubdomain(url) {
    var subDomains = window.location.host.split('.');
    return subDomains[0];
}

function NotifySpin(ctrl) {
    var left = $(ctrl).offset().left;
    var top = $(ctrl).offset().top;

    $('#divSpin').css({
        top: top,
        left: left - 25
    }).show();
}